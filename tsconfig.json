{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"sourceMap": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitAny": true
	},
	"include": ["src/**/*", "options.ts", "input.ts"]
}
